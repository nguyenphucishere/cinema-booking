
@{
    ViewBag.Title = "Find Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="left: -2%;position: relative;">Find Movie</h2>
<form class="row mb-3" style="width: 100%">
    <input type="text" id="movieName" class="form-control col mr-2" aria-describedby="movieName">
    <button type="button" id="findMovie" class="btn btn-primary">Find Movie</button>
</form>
<div id="content" class="row">

</div>
<div class="modal fade" id="trailerViewModal" tabindex="-1" role="dialog" aria-labelledby="trailerViewModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Loading...
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $("#findMovie").click(function (event) {
            var $input = $("#movieName")

            $.get('/Movie/findMovie/?name=' + $input.val(), function (result) {
                var decodedString = atob(result);
                $("#content").html(decodedString);
            });
        });
    </script>
}
